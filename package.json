{
  "name": "stage-ui",
  "author": "Project one",
  "version": "0.2.0-beta",
  "license": "MIT",
  "private": true,
  "workspaces": [
      "packages/*"
  ],
  "scripts": {
    "build": "yarn system:build && yarn icons:build && yarn core:build",
    "pub": "yarn core:pub && yarn icons:pub && yarn system:pub",
    "core:build": "cd ./packages/core && yarn build",
    "core:pub": "cd ./build/core && npm publish --registry=https://registry.npmjs.org",
    "icons:build": "cd ./packages/icons && yarn build",
    "icons:pub": "cd ./build/icons && npm publish --registry=https://registry.npmjs.org",
    "system:build": "cd ./packages/system && yarn build",
    "system:pub": "cd ./packages/system && npm publish --registry=https://registry.npmjs.org",
    "docs:start": "yarn workspace @stage-ui/docs start",
    "docs:serve": "cd ./build/docs && pm2 start --name StageUI server.js",
    "docs:test": "yarn workspace @stage-ui/docs test",
    "docs:test:approve": "yarn workspace @stage-ui/docs approve",
    "sandbox:start": "yarn workspace @stage-ui/sandbox start",
    "sandbox:analyze": "yarn workspace @stage-ui/sandbox analyze",
    "gen": "yarn gen:createTypes && yarn gen:generateTypes && yarn gen:fixTypes",
    "gen:createTypes": "cd ./packages/docs && typedoc",
    "gen:generateTypes": "cd ./packages/docs && node ./scripts/generateTypes.js",
    "gen:fixTypes": "cd ./packages/docs && node ./scripts/fixTypes.js",
    "gen:icons": "cd ./packages/icons && yarn gen"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@types/react": "^17.0.0",
    "@types/color": "3.0.1",
    "@typescript-eslint/eslint-plugin": "4.26.0",
    "@typescript-eslint/parser": "4.26.0",
    "csstype": "^3.0.6",
    "eslint": "7.27.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "prettier": "2.3.0",
    "typescript": "4.2.4",
    "webpack": "5.38.1",
    "webpack-bundle-analyzer": "4.4.2",
    "webpack-cli": "4.7.0",
    "webpack-dev-server": "3.11.2",
    "webpack-filter-warnings-plugin": "1.2.1",
    "copy-webpack-plugin": "9.0.0"
  }
}
