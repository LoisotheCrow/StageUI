{
    "compilerOptions": {
        "module": "commonjs",
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "target": "esnext",
        "outDir": "../../build/docs",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "strict": true,
        "noImplicitAny": false,
        "types": ["@emotion/react", "node"]
    },
    "include": [
        "showcases/**/*"
    ],
    "exclude": [
        "node_modules",
        "editor/**/*",
        "pages/**/*"
    ]
}